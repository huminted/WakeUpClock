<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@drawable/checkbox"
     android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#2685bc"
    android:orientation="vertical" >

<View
    android:id="@+id/view4"
    android:layout_width="wrap_content"
    android:layout_height="28dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:layout_gravity="center"
        android:text="编辑闹钟"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:textSize="40sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:gravity="center" >

        <View
            android:id="@+id/view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/timetv" />

        <TextView
            android:id="@+id/timetv"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textColor="#ffffff"
            android:textSize="70dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/laybg"
        android:gravity="left" >

        <TextView
            android:id="@+id/time1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/_"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <Button
            android:id="@+id/choose"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignBaseline="@+id/time1"
            android:layout_alignBottom="@+id/time1"
            android:layout_alignParentRight="true"
            android:background="@drawable/choosebtn"
            android:focusable="false"
            android:textColor="#ffffff" />

    </RelativeLayout>

    <View
        android:id="@+id/view3"
        android:layout_width="wrap_content"
        android:layout_height="14dp" />

    <RelativeLayout
         android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/laybg" >

        <TextView
            android:id="@+id/time4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="  震动设置"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff"
            android:textSize="15sp" />
        
        <CheckBox
            android:id="@+id/vibrator_cb"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/time4"
            android:layout_alignParentRight="true"
            android:layout_marginRight="61dp"
            android:background="@drawable/checkbox"
            android:button="@drawable/space"
            android:checked="false"
            android:focusable="false" />

        <TextView
            android:id="@+id/texVi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/vibrator_cb"
            android:layout_alignBottom="@+id/vibrator_cb"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:clickable="true"
            android:text=" 关闭震动"
            android:textColor="#ffffff"
            android:textSize="10sp" />

    </RelativeLayout>

    <View
        android:id="@+id/view33"
        android:layout_width="wrap_content"
        android:layout_height="14dp" />

    <RelativeLayout
         android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/laybg" >

        <TextView
            android:id="@+id/textVi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:text=" 睡眠防扰设置"
            android:textColor="#ffffff"
            android:textSize="10sp" />

        <CheckBox
            android:id="@+id/nobother_cb"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/textVi"
            android:background="@drawable/checkbox"
            android:button="@drawable/space"
            android:checked="false"
            android:focusable="false" />

        <TextView
            android:id="@+id/time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textVi"
            android:layout_marginRight="54dp"
            android:layout_toLeftOf="@+id/nobother_cb"
         android:text="在此期间我们将关闭
除电话外的所有铃声"
            android:textColor="#ffffff"
            android:textSize="10sp" />

    </RelativeLayout>

    <View
        android:id="@+id/view6"
        android:layout_width="wrap_content"
        android:layout_height="14dp" />

<RelativeLayout
      android:layout_width="300dp"
        android:layout_height="120dp"
    android:layout_gravity="center"
    android:background="@drawable/laybg" >

    <TextView
        android:id="@+id/remind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text=" 备注信息"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/remind"
        android:layout_alignBottom="@+id/remind"
        android:layout_toRightOf="@+id/remind"
        android:ems="10"
        android:textSize="16sp" 
             android:textColor="#ffffff"/>

    </RelativeLayout>



    <requestFocus />

    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="35dp" />

    <Button
        android:id="@+id/back"
        android:layout_width="96dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_baocun" />

    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="348dp" />

</LinearLayout><!-- From: file:/F:/Wakeup_1/res/layout-960x540/edit.xml -->