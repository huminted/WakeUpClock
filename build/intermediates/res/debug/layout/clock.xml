<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#2685bc"
    android:gravity="center"
    android:orientation="vertical" >

    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="7dp"
        android:layout_alignParentRight="true" />


    <FrameLayout
        android:id="@+id/frameLayout1"
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <Button
            android:id="@+id/clock_btn"
            android:layout_width="34dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/ico_noti" />

        <Button
            android:id="@+id/intent"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:layout_gravity="right"
            android:background="@drawable/set" />

        
        <Button
            android:id="@+id/wifi"
            android:layout_width="30dp"
            android:layout_height="28dp"
            android:background="@drawable/wifi_btn" />
    </FrameLayout>

    <AnalogClock
        android:id="@+id/AnalogClock"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_below="@+id/frameLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:dial="@drawable/clock"
        android:hand_hour="@drawable/hour"
        android:hand_minute="@drawable/minute" />

    <View
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/set" />

    <DigitalClock
        android:id="@+id/digitalClock1"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@+id/AnalogClock"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/digitalclock"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:textSize="40sp" />

    <Button
        android:id="@+id/set"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@+id/digitalClock1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:background="@drawable/button" />

</RelativeLayout><!-- From: file:/F:/Wakeup_1/res/layout/clock.xml -->